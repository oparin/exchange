{% extends '::base.html.twig' %}

{#{% form_theme form '::twig_theme.html.twig' %}#}

{% block title_content %}<i class="fa fa-usd"></i>&nbsp; Майнинг Настройки{% endblock title_content %}

{% block content %}
    {% for flashMessage in app.session.flashbag.get('success') %}
        {% include '::alert_succes.html.twig' with {'text' : flashMessage} %}
    {% endfor %}
    {% for flashMessage in app.session.flashbag.get('error') %}
        {% include '::alert_error.html.twig' with {'text' : flashMessage} %}
    {% endfor %}
    <div class="row">
        <div class="col-lg-12">
            <div class="box">
                <header>
                    <div class="icons">
                        <i class="fa fa-edit"></i>
                    </div>
                    <h5>Настройки</h5>
                </header>
                <div id="collapse4" class="body">
                    {{ form_start(form, {'attr': {'class': 'form-horizontal'} }) }}
                    <div class="form-group {% if form_errors(form.progressBar) %}has-error{% endif %}">
                        {{ form_label(form.progressBar, 'Прогресс бар', {'label_attr': {'class': 'control-label col-lg-3'}}) }}
                        <div class="col-lg-4">
                            {{ form_widget(form.progressBar, {'attr': {'class': 'form-control'}}) }}
                            {% if form_errors(form.progressBar) %}
                                <span id="required2-error" class="help-block">{{ form_errors(form.progressBar) }}</span>
                            {% endif %}
                        </div>
                    </div><!-- /.form-group -->

                    <div class="form-group {% if form_errors(form.multiplier) %}has-error{% endif %}">
                        {{ form_label(form.multiplier, 'Множитель для Pool wallet', {'label_attr': {'class': 'control-label col-lg-3'}}) }}
                        <div class="col-lg-4">
                            {{ form_widget(form.multiplier, {'attr': {'class': 'form-control'}}) }}
                            {% if form_errors(form.multiplier) %}
                                <span id="required2-error" class="help-block">{{ form_errors(form.multiplier) }}</span>
                            {% endif %}
                        </div>
                    </div><!-- /.form-group -->

                    <div class="form-group {% if form_errors(form.duration) %}has-error{% endif %}">
                        {{ form_label(form.duration, 'Период (дни)', {'label_attr': {'class': 'control-label col-lg-3'}}) }}
                        <div class="col-lg-4">
                            {{ form_widget(form.duration, {'attr': {'class': 'form-control'}}) }}
                            {% if form_errors(form.duration) %}
                                <span id="required2-error" class="help-block">{{ form_errors(form.duration) }}</span>
                            {% endif %}
                        </div>
                    </div><!-- /.form-group -->

                    {{ form_rest(form) }}
                    <div class="form-group">
                        <div class="control-label col-lg-3"></div>
                        <div style="float: right" class="col-lg-9">
                            <input type="submit" value="Сохранить" class="btn btn-metis-6 btn-sm">
                        </div>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock content %}